<?xml version="1.0" encoding="UTF-8"?>
<project name="Webtasks example" default="init">

	<description>Build PunBB</description>
	<import file="webtasks.xml"/>
	<property name="webtasks.dir" value="${basedir}" />


	<!-- SOURCE DIRS -->
	<property name="js-src" value="${basedir}/../js" />
	<property name="css-src" value="${basedir}/../css" />

	<target name="init" depends="webtasks.init, make-js, make-css">
		<echo>Build done.</echo>
	</target>


	<!-- BUILD JS -->
	<target name="make-js">
		<compress-js-lib tofile="${js-src}/prettify.min.js" force="true">
			<filelist dir="${js-src}">
				<file name="prettify.js" />
			</filelist>
		</compress-js-lib>
	</target>


	<!-- BUILD CSS -->
	<target name="make-css">
		<compress-css-lib tofile="${css-src}/Oxygen/prettify.min.css" force="true">
			<filelist dir="${css-src}">
				<file name="Oxygen/prettify.css" />
			</filelist>
		</compress-css-lib>
	</target>

</project>
